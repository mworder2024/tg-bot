# Bot Configuration
BOT_TOKEN=your-telegram-bot-token-for-production
BOT_TOKEN_DEV=your-development-bot-token
ENVIRONMENT=development

# IMPORTANT: For local development, create a separate bot on @BotFather
# This prevents conflicts with the production bot running on Railway

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/lottery_bot

# Redis
REDIS_URL=redis://production-redis-url
REDIS_URL_DEV=redis://localhost:6379

# API Server
PORT=3000
API_URL=http://localhost:3000
JWT_SECRET=your-jwt-secret-key

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com
SOLANA_PROGRAM_ID=your-deployed-program-id
SOLANA_TREASURY_PDA=your-treasury-pda
MWOR_TOKEN_MINT=your-mwor-token-mint
VRF_ORACLE_PUBKEY=your-vrf-oracle-pubkey
BOT_WALLET_KEY=your-bot-wallet-private-key

# Security
WEBHOOK_SECRET=your-webhook-secret
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Dashboard Configuration
DASHBOARD_PORT=3000
DASHBOARD_AUTH_TOKEN=your_secure_token_here

# VRF
VRF_SECRET=your-vrf-secret-key

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_RATE_LIMIT_PER_MINUTE=50
ANTHROPIC_RATE_LIMIT_PER_HOUR=500

# Quiz Bot Configuration
QUIZ_SESSION_TIMEOUT=300000
QUIZ_QUESTION_TIMEOUT=30000
QUIZ_MAX_QUESTIONS_PER_SESSION=10
QUIZ_VOTING_TIMEOUT=120000

# Dual Bot Instance
PRIMARY_BOT_TOKEN=your-primary-bot-token
SECONDARY_BOT_TOKEN=your-secondary-bot-token
BOT_INSTANCE_MODE=primary

# Feature Flags
ENABLE_PAID_GAMES=true
ENABLE_WEB_DASHBOARD=true
ENABLE_BLOCKCHAIN=true
ENABLE_QUIZ_MODE=true
ENABLE_ANTHROPIC_INTEGRATION=true