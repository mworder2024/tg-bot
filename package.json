{
  "name": "telegram-lottery-bot",
  "version": "1.0.0",
  "description": "Telegram lottery game bot with VRF-based elimination",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:quiz": "tsx watch src/index-quiz.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:quiz": "node dist/index-quiz.js",
    "start:unified": "node dist/index-unified.js",
    "start:both": "npm run start & npm run start:quiz",
    "dev:unified": "tsx watch src/index-unified.ts",
    "dev:main": "tsx watch src/index.ts",
    "start:main": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:solana": "anchor test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "precommit": "npm run build && npm run lint && npm test",
    "generate-wallets": "tsx scripts/generate-wallets.ts",
    "test:blockchain": "jest tests/blockchain --testTimeout=30000",
    "test:payments": "jest tests/payments --testTimeout=30000",
    "build:program": "anchor build",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "tsx scripts/deploy-mainnet.ts",
    "test:mainnet": "tsx scripts/test-mainnet.ts",
    "idl:generate": "anchor idl parse -f programs/lottery/src/lib.rs -o src/blockchain/idl/telegram_lottery.json",
    "idl:upgrade": "anchor idl upgrade -f src/blockchain/idl/telegram_lottery.json --provider.cluster devnet",
    "dev:api": "tsx watch src/api/server.ts",
    "start:api": "node dist/api/server.js",
    "version:patch": "./scripts/version-workflow.sh patch",
    "version:minor": "./scripts/version-workflow.sh minor",
    "version:major": "./scripts/version-workflow.sh major",
    "version:status": "./scripts/version-workflow.sh status",
    "release:validate": "npm run build && npm run lint && npm test",
    "release:prepare": "npm run release:validate",
    "changelog": "echo 'Changelog generation - see GIT_WORKFLOW.md for details'"
  },
  "keywords": [
    "telegram",
    "bot",
    "lottery",
    "vrf",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@apollo/federation": "^0.38.1",
    "@apollo/gateway": "^2.11.2",
    "@apollo/server": "^4.12.2",
    "@apollo/server-plugin-response-cache": "^4.1.4",
    "@apollo/subgraph": "^2.11.2",
    "@coral-xyz/anchor": "^0.29.0",
    "@graphql-tools/merge": "^9.0.24",
    "@graphql-tools/schema": "^10.0.23",
    "@orao-network/solana-vrf": "^0.6.1",
    "@sentry/node": "^7.86.0",
    "@sentry/profiling-node": "^9.40.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.87.6",
    "@types/morgan": "^1.9.10",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "bs58": "^5.0.0",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "envalid": "^8.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "futil-js": "^1.76.2",
    "graphql": "^16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "https-proxy-agent": "^7.0.6",
    "inquirer-select-with-state": "^0.1.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "node-telegram-bot-api": "^0.66.0",
    "ora": "^8.2.0",
    "pg": "^8.11.3",
    "prom-client": "^15.0.0",
    "qrcode": "^1.5.4",
    "redis": "^4.6.11",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "telegraf": "^4.15.3",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/bs58": "^4.0.1",
    "@types/bull": "^4.10.0",
    "@types/chai": "^5.2.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.3.10",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0"
  }
}
