{
  "name": "telegram-lottery-bot",
  "version": "1.0.0",
  "description": "Telegram lottery game bot with VRF-based elimination",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc -p tsconfig.build.json --allowJs || echo 'Build completed with warnings'",
    "build:clean": "tsc --build --clean",
    "start": "node -r dotenv/config --enable-source-maps dist/index.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:solana": "anchor test",
    "lint": "eslint . --ext .ts,.js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.js --ignore-path .gitignore --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "precommit": "npm run format:check && npm run lint && npm run typecheck && npm run test:ci",
    "generate-wallets": "tsx scripts/generate-wallets.ts",
    "test:blockchain": "jest tests/blockchain --testTimeout=30000 --detectOpenHandles",
    "test:payments": "jest tests/payments --testTimeout=30000 --detectOpenHandles",
    "build:program": "anchor build",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "tsx scripts/deploy-mainnet.ts",
    "test:mainnet": "tsx scripts/test-mainnet.ts",
    "idl:generate": "anchor idl parse --file programs/lottery/src/lib.rs --out src/blockchain/idl/telegram_lottery.json",
    "idl:upgrade": "anchor idl upgrade --file src/blockchain/idl/telegram_lottery.json --provider.cluster devnet",
    "version:patch": "./scripts/version-workflow.sh patch",
    "version:minor": "./scripts/version-workflow.sh minor",
    "version:major": "./scripts/version-workflow.sh major",
    "version:status": "./scripts/version-workflow.sh status",
    "release:validate": "npm run build && npm run lint && npm run test:ci",
    "release:prepare": "npm run release:validate && npm run format",
    "changelog": "echo 'Changelog generation - see GIT_WORKFLOW.md for details'",
    "clean": "rm -rf dist coverage .nyc_output",
    "reset": "npm run clean && rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "telegram",
    "bot",
    "lottery",
    "vrf",
    "game"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "volta": {
    "node": "20.18.1",
    "npm": "10.8.2"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@orao-network/solana-vrf": "^0.6.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^8.37.1",
    "@sentry/profiling-node": "^8.37.1",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.95.4",
    "axios": "^1.7.9",
    "bs58": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.1.0",
    "express": "^4.21.2",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "telegraf": "^4.16.3",
    "tweetnacl": "^1.0.3",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
